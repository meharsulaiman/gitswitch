{
  "name": "gitswitch",
  "displayName": "GitSwitch - Multi Account Manager",
  "description": "Never accidentally commit from the wrong GitHub account again. Seamlessly switch between multiple Git identities per repository.",
  "publisher": "sulaimanshabbir31",
  "version": "0.2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/sulaimanshabbir31/gitswitch.git"
  },
  "bugs": {
    "url": "https://github.com/sulaimanshabbir31/gitswitch/issues"
  },
  "homepage": "https://github.com/sulaimanshabbir31/gitswitch#readme",
  "license": "MIT",
  "keywords": [
    "git",
    "github",
    "identity",
    "ssh",
    "commit",
    "multi-account",
    "git-switch",
    "git-identity",
    "multiple-accounts"
  ],
  "icon": "media/icons/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitswitch.addIdentity",
        "title": "Add Identity",
        "icon": "$(person-add)"
      },
      {
        "command": "gitswitch.switchIdentity",
        "title": "Switch Identity",
        "icon": "$(sync)"
      },
      {
        "command": "gitswitch.bindRepo",
        "title": "Bind Repository to Identity",
        "icon": "$(link)"
      },
      {
        "command": "gitswitch.manageIdentities",
        "title": "Manage Identities",
        "icon": "$(settings-gear)"
      },
      {
        "command": "gitswitch.showRepos",
        "title": "Show Repositories",
        "icon": "$(repo)"
      },
      {
        "command": "gitswitch.selectRepoIdentity",
        "title": "Select Identity for Repository"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "gitswitch.repos",
          "name": "Git Repositories",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "gitswitch.showRepos",
          "when": "view == gitswitch.repos",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "gitswitch.selectRepoIdentity",
          "when": "view == gitswitch.repos && viewItem == repo-unbound",
          "group": "inline"
        },
        {
          "command": "gitswitch.selectRepoIdentity",
          "when": "view == gitswitch.repos && viewItem == repo-bound",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "GitSwitch",
      "properties": {
        "gitswitch.enforceIdentity": {
          "type": "boolean",
          "default": false,
          "description": "Enforce identity matching before commits"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run webpack",
    "compile": "tsc -p ./",
    "compile:all": "npm run compile && npm run webpack",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch"
  },
  "devDependencies": {
    "@types/node": "^18.15.0",
    "@types/vscode": "^1.74.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "typescript": "^5.0.0",
    "webpack": "^5.76.0",
    "webpack-cli": "^5.1.0",
    "ts-loader": "^9.4.2",
    "@vscode/vsce": "^2.19.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
